{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "toolName": "hamming_distance",
  "serverName": "Core",
  "version": "1.0.0",
  "stability": "stable",
  "methodId": "ApproximateMatcher.HammingDistance",
  "docRef": "Seqeron.Genomics/ApproximateMatcher.cs#L163",
  "description": "Calculate Hamming distance between two sequences of equal length.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "sequence1": {
        "type": "string",
        "description": "The first sequence",
        "minLength": 1
      },
      "sequence2": {
        "type": "string",
        "description": "The second sequence",
        "minLength": 1
      }
    },
    "required": ["sequence1", "sequence2"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "distance": {
        "type": "integer",
        "description": "Number of positions with different characters",
        "minimum": 0
      }
    },
    "required": ["distance"]
  },
  "errors": [
    { "code": 1001, "message": "Sequence1 cannot be null or empty" },
    { "code": 1003, "message": "Sequence2 cannot be null or empty" },
    { "code": 1004, "message": "Sequences must have equal length for Hamming distance" }
  ],
  "examples": [
    {
      "name": "Identical sequences",
      "input": { "sequence1": "ATGC", "sequence2": "ATGC" },
      "output": { "distance": 0 }
    },
    {
      "name": "One mismatch",
      "input": { "sequence1": "ATGC", "sequence2": "ATGG" },
      "output": { "distance": 1 }
    }
  ]
}
