{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "toolName": "translate_dna",
  "serverName": "Sequence",
  "version": "1.0.0",
  "stability": "stable",
  "methodId": "Translator.Translate(DnaSequence)",
  "docRef": "Seqeron.Genomics/Translator.cs#L20",
  "description": "Translate a DNA sequence to protein using the standard genetic code.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "sequence": { "type": "string", "description": "The DNA sequence to translate", "minLength": 1 },
      "frame": { "type": "integer", "description": "Reading frame (0, 1, or 2)", "default": 0, "minimum": 0, "maximum": 2 },
      "toFirstStop": { "type": "boolean", "description": "Stop at first stop codon", "default": false }
    },
    "required": ["sequence"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "protein": { "type": "string", "description": "Translated protein sequence" },
      "frame": { "type": "integer", "description": "Reading frame used" },
      "dnaLength": { "type": "integer", "description": "Original DNA length" }
    },
    "required": ["protein", "frame", "dnaLength"]
  },
  "errors": [
    { "code": 1001, "message": "Sequence cannot be null or empty" },
    { "code": 1003, "message": "Frame must be 0, 1, or 2" },
    { "code": 2001, "message": "Invalid DNA sequence" }
  ],
  "examples": [
    {
      "name": "Translate DNA to protein",
      "input": { "sequence": "ATGCGA", "frame": 0, "toFirstStop": false },
      "output": { "protein": "MR", "frame": 0, "dnaLength": 6 }
    }
  ]
}
