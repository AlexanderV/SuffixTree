{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "toolName": "is_valid_rna",
  "serverName": "Sequence",
  "version": "1.0.0",
  "stability": "stable",
  "methodId": "SequenceExtensions.IsValidRna",
  "docRef": "SuffixTree.Genomics/SequenceExtensions.cs#L225",
  "description": "Quick check if a sequence contains only valid RNA characters (A, U, G, C). Faster than rna_validate but returns less information.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "sequence": {
        "type": "string",
        "description": "The sequence to validate",
        "minLength": 1
      }
    },
    "required": ["sequence"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "isValid": { "type": "boolean", "description": "True if all characters are valid RNA" },
      "length": { "type": "integer", "description": "Sequence length" }
    },
    "required": ["isValid", "length"]
  },
  "errors": [
    { "code": 1001, "message": "Sequence cannot be null or empty" }
  ],
  "examples": [
    {
      "name": "Valid RNA",
      "input": { "sequence": "AUGCGAUCG" },
      "output": { "isValid": true, "length": 9 }
    },
    {
      "name": "Invalid RNA (contains T)",
      "input": { "sequence": "ATGC" },
      "output": { "isValid": false, "length": 4 }
    }
  ]
}
