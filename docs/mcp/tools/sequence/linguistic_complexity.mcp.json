{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "toolName": "linguistic_complexity",
  "serverName": "Sequence",
  "version": "1.0.0",
  "stability": "stable",
  "methodId": "SequenceStatistics.CalculateLinguisticComplexity",
  "docRef": "SuffixTree.Genomics/SequenceStatistics.cs#L615",
  "description": "Calculate linguistic complexity of a sequence based on k-mer diversity. Values range from 0 to 1.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "sequence": {
        "type": "string",
        "description": "The sequence to analyze",
        "minLength": 1
      },
      "maxK": {
        "type": "integer",
        "description": "Maximum k-mer length to consider (default: 6)",
        "default": 6
      }
    },
    "required": ["sequence"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "complexity": { "type": "number", "description": "Linguistic complexity (0-1)" }
    },
    "required": ["complexity"]
  },
  "errors": [
    { "code": 1001, "message": "Sequence cannot be null or empty" }
  ],
  "examples": [
    {
      "name": "High complexity sequence",
      "input": { "sequence": "ATGCATGCATGC" },
      "output": { "complexity": 0.95 }
    },
    {
      "name": "Low complexity sequence",
      "input": { "sequence": "AAAAAAAAAA" },
      "output": { "complexity": 0.17 }
    }
  ]
}
